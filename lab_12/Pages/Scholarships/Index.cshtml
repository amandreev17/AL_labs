@page
@model lab12.Pages.Scholarships.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Scholarship[0].Size)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Scholarship) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.StipId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.StipId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.StipId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
